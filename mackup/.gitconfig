    email = maxslarsson@gmail.com
    name = Max Larsson

[merge]
    conflictStyle = diff3

[magit]
    hideCampaign = true

[init]
    defaultBranch = main

[commit]
    gpgsign = true
[gpg]
	program = gpg
[pull]
	rebase = false
	ff = only
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy --patch
